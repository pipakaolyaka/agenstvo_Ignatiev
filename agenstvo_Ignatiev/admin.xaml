                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FF490505" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ComboBox x:Name="dostupC" HorizontalAlignment="Left" Margin="934,217,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Доступность:" HorizontalAlignment="Left" Margin="822,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="poiskB" Content="Найти" HorizontalAlignment="Left" Margin="908,260,0,0" VerticalAlignment="Top" Height="25" Width="75" Click="poiskB_Click" MouseLeftButtonDown="poiskB_MouseLeftButtonDown"/>
        <Button x:Name="dobavitB" Content="Добавить" HorizontalAlignment="Left" Margin="23,472,0,0" VerticalAlignment="Top" Height="25" Width="67" Click="dobavitB_Click"/>
        <TextBox x:Name="adresT" HorizontalAlignment="Left" Margin="160,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="cenaT" HorizontalAlignment="Left" Margin="295,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ploshadT" HorizontalAlignment="Left" Margin="432,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="tipC2" HorizontalAlignment="Left" Margin="23,435,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="komnatC2" HorizontalAlignment="Left" Margin="578,435,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="dostupC2" HorizontalAlignment="Left" Margin="917,435,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Тип" HorizontalAlignment="Left" Margin="23,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Адрес" HorizontalAlignment="Left" Margin="160,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Цена" HorizontalAlignment="Left" Margin="295,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Площадь" HorizontalAlignment="Left" Margin="432,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Количество комнат" HorizontalAlignment="Left" Margin="578,404,0,0" VerticalAlignment="Top"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="717,401,0,0" VerticalAlignment="Top"/>
        <Label Content="Доступность" HorizontalAlignment="Left" Margin="917,401,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="opisanieT" HorizontalAlignment="Left" Margin="717,435,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="84" Width="182" OpacityMask="Black" Background="#FFE8E8E8" Foreground="White"/>
        <Button x:Name="izmenitB" Content="Изменить" HorizontalAlignment="Left" Margin="115,472,0,0" VerticalAlignment="Top" Height="25" Width="67" Click="izmenitB_Click"/>
        <Button x:Name="udalitB" Content="Удалить" HorizontalAlignment="Left" Margin="203,472,0,0" VerticalAlignment="Top" Height="25" Width="67" Click="udalitB_Click"/>

    </Grid>
</Window>
